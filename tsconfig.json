{
  "compilerOptions": {
    "outDir": "build/dist",
    "rootDir": "src",
    "module": "esnext",
    "noEmit": true,
    "jsx": "preserve",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.test.tsx"
  ],
  "include": [
    "src"
  ]
}
